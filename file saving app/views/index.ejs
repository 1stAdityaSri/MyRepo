<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
          <form action="/create" method="POST" class="">
            <input class ="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800" type="text" name="title" placeholder="write your task details">
            <textarea class="block w-full rounded-md  outline-none px-5 mt-2 py-2 resize-none bg-zinc-800"name="details" placeholder="write your task description"></textarea>
            <input class ="block  bg-blue-500 rounded-md px-5 mt-2 py-2 bg-zinc-800" type="submit" value="Create task">
              <% if (error) { %>
    <div style="color: red; margin-top: 8px;"><%= error %></div>
  <% } %>

          </form>

        </div>
        <div class="tasks flex gap-3 flex-wrapp-10"> 
            <% if(files.length > 0) { %>
               <% files.forEach(function(val) { %>
                 <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                  <h1 class="text-white text-3xl tracking-tighter"><%= val.split('.')[0] %></h1>
                  <a class="text-blue-600 inline-block mt-3" href="/files/<%= val %>">Read more.</a>
                <a class="text-zinc-600 mt-3" href="/edit/<%= val %>">edit</a>

                 </div>
               <% }) %>
            <% } else { %>
                <h3 class="text-zinc-600">No tasks yet</h3>
            <% } %>
            <h3 class="text-zinc-600">No tasks</h3>
        </div>
    </div>

     <!-- <script src="/javascript/script.js"></script> -->
</body>
</html>